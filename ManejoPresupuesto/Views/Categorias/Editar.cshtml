@model Categoria
@{
    ViewData["Title"] = "Editar categoria";
}

<h1>Editar Categoria</h1>
<h5>La categoría nos permite indicar en qué gastamos nuestro dinero,
    también, de dónde privienen nuestros ingresos.</h5>

<form asp-action="Editar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <!--El input type hidden es un campo escondido que nos permite transmitir datos que no queremos que el usuario vea-->
    <!--En este caso nos servirá para editar. Pues enviaremos el Id de la categoria a editar-->
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoOperacionId" class="form-label"></label>
        <!-- funcionalidad que permite crear select list item a partir de un Enum -->
        <select asp-for="TipoOperacionId" asp-items="Html.GetEnumSelectList<TipoOperacion>()"
                class="form-select"></select>
        <span asp-validation-for="TipoOperacionId" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    }
